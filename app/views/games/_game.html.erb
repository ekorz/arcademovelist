<li <% game.attributes.each_pair do |name, value| %> 
        data-<%= name.downcase %>='<%= value.try(:downcase) %>' 
        <% end %> >
  <div class="panel panel-default">
    <div class="panel-heading">
      <table id="interesting-content" width="100%">
        <tr>
          <td valign="center" align="left" width="85%" data-url="<%=url_for game%>" class="">
            <h1>
              <input data-submiturl="<%= game_inline_update_path(game, field: :name) %>" type="text" class="editField" value="<%= game.name %>" readonly>
            </h1>
          </div>
        </td>
        <td>
          <% game.attributes.each_pair do |name, value| %>
            <span style='display:none' 
                        data-aux='<%= value.try(:downcase) %>' 
                        class='aux'>
              <%= value %>
            </span>
          <% end %>
        </td>
        <td >
          <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapse<%=game.id%>"></a>
        </td>
        <td width="5%">
        </td>
      </tr>
    </table>
    <div id="collapse<%=game.id%>" class="panel-collapse collapse">
      <div class="panel-body" data-fields="true">
        <h4>Year: <input data-submiturl="<%= game_inline_update_path(game, field: :year) %>" type="text" class="editField" value="<%= game.year %>" readonly><br>
          Genre: <input data-submiturl="<%= game_inline_update_path(game, field: :genre) %>" type="text" class="editField" value="<%= game.genre %>" readonly><br>
          Platform: <input data-submiturl="<%= game_inline_update_path(game, field: :platform) %>" type="text" class="editField" value="<%= game.platform %>" readonly><br>
          Developer: <input data-submiturl="<%= game_inline_update_path(game, field: :developer) %>" type="text" class="editField" value="<%= game.developer %>" readonly>
        </h4>
        <div id="delete-button" data-url="true" delete-button="true" >
          <%= link_to 'Destroy', game, method: :delete, class: "btn btn-primary", data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    </div>
  </div>
</div>
</li>