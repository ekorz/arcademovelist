<%= form_for @game do |f| %>
  <%= f.text_field :name, placeholder: 'Name' %><br>
  <%= f.text_field :developer, placeholder: 'Developer' %><br>
  <%= f.text_field :platform, placeholder: 'Platform' %><br>
  <%= f.text_field :genre, placeholder: 'Genre' %><br>
  <%= f.text_field :description, placeholder: 'Description' %><br>
  <%= f.text_field :year, placeholder: 'Year' %><br>
  <%= f.submit "Submit" %>
<% end %>