<%= form_for(@character, method: :post, url: characters_path) do |f| %>
  <%= f.hidden_field :tab_id, value: object.id  %>
  <%= f.text_field :name, placeholder: 'Name' %><br>
  <%= f.text_field :description, placeholder: 'Description' %><br>
  <%= f.number_field :position %><br>
  <%= f.submit "Submit" %> 
<% end %>